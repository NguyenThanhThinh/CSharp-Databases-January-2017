@model HardwareShop.Models.ViewModels.Items.DeleteItemViewModel

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="well">
        <h2>Delete Item</h2>
        @using (Html.BeginForm("Delete", "Item", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.HiddenFor(m => m.ItemId)

            <div class="form-group">
                @Html.LabelFor(m => m.ManufacturerName, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.ManufacturerName, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Model, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.Model, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CategoryName, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.SubCategoryName, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.SubCategoryName, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ItemStatus, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.ItemStatus, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Price, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            if (Model.ItemStatus.ToString() == "Promotion")
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPrice, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4 ">
                        @Html.TextBoxFor(m => m.NewPrice, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
            }
            <div class="form-group">
                @Html.LabelFor(m => m.WarrantyLengthMonths, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.WarrantyLengthMonths, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Rateing, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.Rateing, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Quantity, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.UploadDate, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.UploadDate, "{0:dd MMM yyyy}", new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @readonly = "readonly", rows = "10" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Details", "Item", new { @itemId = Model.ItemId }, new { @class = "btn btn-default" })
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>
