@model HardwareShop.Models.ViewModels.Reviews.DeleteReviewViewModel

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="well">
        <h2>Delete Review</h2>
        @using (Html.BeginForm("Delete", "Review", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.HiddenFor(m => m.ReviewId)
            @Html.HiddenFor(m => m.ItemId)

            <div class="form-group">
                @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = "10", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Score, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.Score, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.AuthorUsername, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.AuthorUsername, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ReviewDate, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.ReviewDate, "{0:dd MMM yyyy}", new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
           
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Details", "Item", new { @itemId = Model.ItemId }, new { @class = "btn btn-default" })
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>
