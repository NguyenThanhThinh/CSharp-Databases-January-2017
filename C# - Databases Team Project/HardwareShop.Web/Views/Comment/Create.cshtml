@model HardwareShop.Models.ViewModels.Comments.CommentViewModel

@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="well">
        <h2>Add Comment</h2>
        @using (Html.BeginForm("Create", "Comment", FormMethod.Post, new { @class = "form-horizontal" }))
        {

            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.ItemId)
            @Html.HiddenFor(m => m.ReviewId)

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group span=8 offset=2">
                    @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = "10" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-4">
                        @Html.ActionLink("Cancel", "Details", "Item", new { @itemId = Model.ItemId }, new { @class = "btn btn-default" })
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>

            </div>
        }
    </div>
</div>

